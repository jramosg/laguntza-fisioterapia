---
import Picture from 'astro/components/Picture.astro';
import CircleCheck from '@icons/circle-check.svg';
import { generateSlug } from '@utils/helpers';
import { sectionImages, type ServiceBullet } from '@config/company';
import punctureMp4 from '@videos/puncture.mp4';
import punctureWebm from '@videos/puncture.webm';
import PunctureMobile from '@images/puncture-mobile.webp';
import { getLangFromUrl, useTranslations } from '@i18n/utils';

const { section, isEven } = Astro.props;
const hash = generateSlug(section.title);

const url = Astro.url;
const lang = getLangFromUrl(url);
const t = useTranslations(lang);

const image = sectionImages[section.id as keyof typeof sectionImages];

const structuredData = {
	'@context': 'https://schema.org',
	'@type': 'VideoObject',
	name: section.title,
	description: section.desc,
	thumbnailUrl: image.src,
	uploadDate: '2025-11-28',
	duration: 'PT1S', // Update this to match actual video duration
	contentUrl: punctureMp4,
	embedUrl: punctureMp4,
	interactionStatistic: {
		'@type': 'InteractionCounter',
		interactionType: 'https://schema.org/WatchAction',
		userInteractionCount: 0
	}
};
---

<section
	class:list={[
		'service-card',
		'card',
		'card--elevated',
		isEven ? 'even-service' : 'odd-service',
		'card--not-interactive'
	]}
	id={hash}
>
	{
		section.id === 'specialized-techniques' ? (
			<figure>
				<video
					autoplay
					muted
					loop
					playsinline
					preload="metadata"
					poster={image.src}
					class="service-card__media desktop-video"
					aria-label={t('video.puncture-aria-label')}
				>
					<source src={punctureWebm} type="video/webm" />
					<source src={punctureMp4} type="video/mp4" />
					Your browser does not support the video tag.{' '}
					<a href="/media/video.mp4">Download</a>
				</video>
				<video
					autoplay
					muted
					loop
					playsinline
					preload="metadata"
					poster={PunctureMobile.src}
					class="service-card__media mobile-video"
					aria-label={t('video.puncture-aria-label')}
				>
					<source src={punctureWebm} type="video/webm" />
					<source src={punctureMp4} type="video/mp4" />
					Your browser does not support the video tag.{' '}
					<a href="/media/video.mp4">Download</a>
				</video>
				<figcaption class="sr-only">
					{t('video.puncture-transcript')}
				</figcaption>
			</figure>
		) : (
			<Picture
				src={image}
				alt={section.title}
				id="home-hero-image"
				class="service-card__media"
			/>
		)
	}
	<div class="service-card__desc">
		<h2>{section.title}</h2>
		<p>{section.desc}</p>
		{
			section.bullets?.length && (
				<ul>
					{section.bullets?.map((bullet: ServiceBullet) => {
						return (
							<li class="service-card__bullet">
								<CircleCheck color="currentColor" />
								<div>
									{bullet.href ? (
										<a
											href={`/${lang}/services/${bullet.href}`}
											class="bullet-link"
										>
											<h3>{bullet.title}</h3>
										</a>
									) : (
										<h3>{bullet.title}</h3>
									)}
									{bullet.desc && (
										<>
											<p>{bullet.desc}</p>
										</>
									)}
								</div>
							</li>
						);
					})}
				</ul>
			)
		}
		{
			section.href && (
				<div class="service-card__cta">
					<a href={`/${lang}/services/${section.href}`} class="learn-more-link">
						{t('Ikusi gehiago')} â†’
					</a>
				</div>
			)
		}
	</div>
</section>

<script type="application/ld+json" set:html={JSON.stringify(structuredData)} />

<style>
	.service-card {
		display: grid;
		gap: var(--s6);
		flex-direction: column;
		position: relative;
		scroll-margin-top: var(--header-height);
		align-items: stretch;
	}

	.service-card__desc {
		padding: var(--s6) var(--s4);

		h2 {
			font-size: var(--font-size-md);
		}

		p {
			color: var(--theme-text-secondary);
		}
	}
	video.service-card__media {
		width: 100%;
	}

	.service-card__media {
		height: 100%;
		width: 100%;
		max-height: 500px;
		object-fit: cover;
		border-top-right-radius: var(--theme-shape-radius);
		border-top-left-radius: var(--theme-shape-radius);
	}

	.desktop-video {
		display: none;
	}

	.mobile-video {
		display: block;
	}

	@media (min-width: 1024px) {
		.service-card {
			grid-template-columns: repeat(2, minmax(0, 1fr));
			grid-auto-flow: column dense;
			align-items: stretch;
		}
		.service-card__media {
			height: 100%;
			aspect-ratio: 1/1;
			object-fit: cover;
			max-height: unset;
		}

		.desktop-video {
			display: block;
		}
		.mobile-video {
			display: none;
		}
		.service-card__desc {
			height: 100%;
		}
		.odd-service .service-card__media {
			grid-column-start: 2;
		}

		.odd-service .service-card__desc {
			grid-column-start: 1;
		}

		.even-service .service-card__media {
			border-top-left-radius: var(--theme-shape-radius);
			border-bottom-left-radius: var(--theme-shape-radius);
			border-top-right-radius: unset;
		}
		.odd-service .service-card__media {
			border-top-right-radius: var(--theme-shape-radius);
			border-bottom-right-radius: var(--theme-shape-radius);
			border-top-left-radius: unset;
		}
	}

	ul {
		list-style: none;
		padding: 0;
		margin: var(--s4) 0 0;
	}

	.service-card__cta {
		margin-top: var(--s6);
	}

	.learn-more-link {
		color: var(--theme-primary);
		font-weight: bold;
		text-decoration: none;
		display: inline-flex;
		align-items: center;
		gap: var(--s2);
		transition: color var(--theme-transition);
	}

	.learn-more-link:hover {
		color: var(--theme-primary-dark);
		text-decoration: underline;
	}

	.service-card__bullet {
		margin: var(--s2) 0;
		display: grid;
		grid-template-columns: auto 1fr;
		gap: var(--s2);
		svg {
			color: var(--theme-primary);
			margin-top: 4px;
		}

		h3 {
			font-size: var(--font-size-base);
			line-height: normal;
			margin: unset;
		}

		p {
			font-weight: unset;
		}
	}

	.bullet-link {
		text-decoration: none;
		color: var(--theme-primary);
		transition: color var(--theme-transition);

		&:hover {
			color: var(--theme-primary-dark);
			text-decoration: underline;
		}
	}

	.sr-only {
		position: absolute;
		width: 1px;
		height: 1px;
		padding: 0;
		margin: -1px;
		overflow: hidden;
		clip: rect(0, 0, 0, 0);
		white-space: nowrap;
		border: 0;
	}
</style>
