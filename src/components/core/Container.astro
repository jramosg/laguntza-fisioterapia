---
type Props = {
	narrow?: boolean;
	class?: string;
	tag?: keyof HTMLElementTagNameMap;
};
const { narrow, class: classNAme, tag, ...rest }: Props = Astro.props;
const Tag = tag || `div`;
---

<Tag
	class={`content__container ${narrow ? `content__container--narrow` : ``}  ${classNAme || ``}`}
	{...rest}
>
	<slot />
</Tag>

<style>
	.content__container {
		margin: 0 auto;
		max-width: var(--container-max-width);
		padding: var(--container-padding);
	}
	.content__container--narrow {
		max-width: var(--container-max-width-narrow);
	}
</style>
