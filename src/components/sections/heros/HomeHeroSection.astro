---
import { Container } from '@components/odyssey-theme';
import { getLangFromUrl, useTranslations } from '@i18n/utils';
import { Picture } from 'astro:assets';

import jokin from '@images/jokin.webp';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Container>
	<section class="hero-section__section">
		<div class="hero-section__text">
			<h1>{t('Kaixo!')}</h1>
			<p>
				{t('home-hero-desc')}
			</p>
		</div>
		<div class="hero-section__image">
			<Picture src={jokin} alt="Jokin Ramos" id="home-hero-image" />
		</div>
	</section>
</Container>

<style>
	.hero-section__section {
		margin: var(--section-margin) auto;
		min-height: clamp(90vh, 100vw, calc(100vh - var(--navbar-height)));
		display: grid;
		grid-template-columns: 1fr 1fr;
		align-items: center;
		gap: 1rem;
	}
	.hero-section__text {
		justify-self: center;
		max-width: 25rem;
	}
	.hero-btns__container {
		margin-right: 1rem;
	}
	.hero-section__image {
		display: flex;
	}
	.hero-section__image img {
		width: 100%;
		height: 100%;
		max-height: 80vh;
		object-fit: cover;
		border-radius: var(--theme-shape-radius);
		mask-image: linear-gradient(
			to bottom,
			rgba(0, 0, 0, 1) 50%,
			rgba(0, 0, 0, 0) 100%
		);
		-webkit-mask-image: linear-gradient(
			to bottom,
			rgba(0, 0, 0, 1) 50%,
			rgba(0, 0, 0, 0) 100%
		);
	}
	@media (max-width: 768px) {
		.hero-section__section {
			grid-template-columns: 1fr;
		}
	}

	@keyframes fadeUp {
		from {
			opacity: 0;
			transform: translateY(500px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	@media (prefers-reduced-motion: reduce) {
		animation: none;
	}
</style>
