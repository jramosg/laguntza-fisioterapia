---
import Container from '@components/core/Container.astro';
import Layout from '../layouts/Page.astro';
import Button from '@components/buttons/Button.astro';

const seo = {
	title: 'Página no encontrada - 404 | Laguntza Fisioterapia',
	description: 'La página que buscas no existe. Vuelve al inicio de Laguntza Fisioterapia, centro de fisioterapia en Urnieta, Gipuzkoa.',
	noindex: true
};
---

<Layout {seo}>
	<Container>
		<div class="error-page">
			<h1>404</h1>
			<h2>Orrialdea ez da aurkitu / Página no encontrada</h2>
			<p>
				Bilatu duzun orrialdea ez dago eskuragarri edo kendu egin da. <br/>
				La página que buscas no está disponible o ha sido eliminada.
			</p>
			<div class="cta-buttons__container">
				<Button href="/es/">Volver al inicio</Button>
				<Button href="/es/contact">Contactar</Button>
			</div>
		</div>
	</Container>
</Layout>

<style>
	.error-page {
		text-align: center;
		padding: 4rem 2rem;
		max-width: 600px;
		margin: 0 auto;
	}
	
	.error-page h1 {
		font-size: 6rem;
		color: var(--theme-primary);
		margin-bottom: 1rem;
		font-weight: bold;
	}
	
	.error-page h2 {
		font-size: 1.5rem;
		margin-bottom: 1.5rem;
		color: var(--theme-text-light);
	}
	
	.error-page p {
		margin-bottom: 2rem;
		line-height: 1.6;
		color: var(--theme-text);
	}
	
	.cta-buttons__container {
		display: flex;
		gap: 1rem;
		justify-content: center;
		flex-wrap: wrap;
	}
	
	@media (max-width: 768px) {
		.error-page h1 {
			font-size: 4rem;
		}
		
		.cta-buttons__container {
			flex-direction: column;
			align-items: center;
		}
	}
</style>
