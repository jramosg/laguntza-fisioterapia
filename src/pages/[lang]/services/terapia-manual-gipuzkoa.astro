---
import Layout from '@layouts/Page.astro';
import Container from '@components/core/Container.astro';
import SectionHero from '@components/SectionHero.astro';
import {
	getLangFromUrl,
	getStaticLangPaths,
	useTranslations
} from '@i18n/utils';
import { Langs } from '@i18n/ui';
import Rehab from '@images/rehab.webp';
import ServiceIntro from '@components/services/ServiceIntro.astro';
import ServiceGridSection from '@components/services/ServiceGridSection.astro';
import ServiceBenefits from '@components/services/ServiceBenefits.astro';
import ServiceLocation from '@components/services/ServiceLocation.astro';
import ServiceCTA from '@components/services/ServiceCTA.astro';

export function getStaticPaths() {
	return getStaticLangPaths();
}

const lang: Langs = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const seo = {
	title: t('service.manual-therapy.seo-title'),
	description: t('service.manual-therapy.seo-description'),
	keywords: t('service.manual-therapy.seo-keywords')
};

const manualTherapyTechniques = [
	{
		title: t('service.manual-therapy.technique-1-title'),
		text: t('service.manual-therapy.technique-1-text')
	},
	{
		title: t('service.manual-therapy.technique-2-title'),
		text: t('service.manual-therapy.technique-2-text')
	},
	{
		title: t('service.manual-therapy.technique-3-title'),
		text: t('service.manual-therapy.technique-3-text')
	},
	{
		title: t('service.manual-therapy.technique-4-title'),
		text: t('service.manual-therapy.technique-4-text')
	}
];

const manualTherapyBenefits = [
	t('service.manual-therapy.benefit-1'),
	t('service.manual-therapy.benefit-2'),
	t('service.manual-therapy.benefit-3'),
	t('service.manual-therapy.benefit-4'),
	t('service.manual-therapy.benefit-5')
];
---

<Layout {seo}>
	<SectionHero id="manual-therapy-hero">
		<h1 slot="title">
			{t('service.manual-therapy.hero-title')}
		</h1>
		<Fragment slot="desc">
			{t('service.manual-therapy.hero-subtitle')}
		</Fragment>
	</SectionHero>

	<Container class="service-page">
		<article class="service-content">
			<ServiceIntro
				title={t('service.manual-therapy.what-is-title')}
				text={t('service.manual-therapy.what-is-text')}
				image={Rehab}
				imageAlt={t('service.manual-therapy.hero-title')}
			/>

			<ServiceGridSection
				title={t('service.manual-therapy.techniques-title')}
				items={manualTherapyTechniques}
			/>

			<ServiceBenefits
				title={t('service.manual-therapy.benefits-title')}
				benefits={manualTherapyBenefits}
			/>

			<ServiceLocation />

			<ServiceCTA />
		</article>
	</Container>
</Layout>

<style>
	.service-page {
		padding-top: var(--s6);
		padding-bottom: var(--s6);
	}

	.service-content {
		max-width: 900px;
		margin: 0 auto;
	}
</style>
