---
import Layout from '@layouts/Page.astro';
import {
	getLangFromUrl,
	getStaticLangPaths,
	useTranslations
} from '@i18n/utils';
import { Langs } from '@i18n/ui';
import SectionHero from '@components/SectionHero.astro';
import AboutSection from '@components/sections/AboutSection.astro';

export function getStaticPaths() {
	return getStaticLangPaths();
}

const lang: Langs = getLangFromUrl(Astro.url);

// SEO data for about page - optimized for Gipuzkoa keywords
const seo = {
	title:
		lang === 'eu'
			? 'Jokin Ramos | Fisioterapeuta eta Osteopata Gipuzkoan | Urnieta'
			: 'Jokin Ramos | Fisioterapeuta y Osteópata en Gipuzkoa | Urnieta',
	description:
		lang === 'eu'
			? 'Ezagutu Jokin Ramos, Gipuzkoako fisioterapeuta eta osteopata Urnietan. Esperientzia klinika lanetan, kirol fisioterapian, terapia manualean eta osteopatian. Errehabilitazioa eta ariketa terapeutikoak Guipuzcoan.'
			: 'Conoce a Jokin Ramos, fisioterapeuta y osteópata en Gipuzkoa. Experiencia en trabajo clínico, fisioterapia deportiva, terapia manual y osteopatía. Rehabilitación y ejercicio terapéutico en Urnieta, Guipúzcoa.',
	keywords:
		lang === 'eu'
			? 'Jokin Ramos fisioterapeuta, osteopata Gipuzkoa, fisioterapia Gipuzkoa, terapia manuala Gipuzkoa, Laguntza Fisioterapia, Zubitxo Plaza Urnieta, fisioterapeuta Donostia gertu, errehabilitazioa Gipuzkoa'
			: 'Jokin Ramos fisioterapeuta, osteópata Gipuzkoa, fisioterapia Gipuzkoa, fisioterapia Guipúzcoa, terapia manual Gipuzkoa, Laguntza Fisioterapia, Plaza Zubitxo Urnieta, fisioterapeuta cerca Donostia, rehabilitación Gipuzkoa'
};
---

<Layout {seo}>
	<AboutSection lang={lang} />
</Layout>
