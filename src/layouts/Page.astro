---
import Layout from './Base.astro';
import type { Props as BaseHeadProps } from '../components/head/BaseHead.astro';
import Logo from '../components/Logo.astro';
import { nav } from '@config/nav';
import DrawerNav from '@components/DrawerNav.astro';
import Header from '@components/core/Header.astro';
import Footer from '@components/core/Footer.astro';
export interface Props {
	seo?: BaseHeadProps;
}

const { seo } = Astro.props as Props;
---

<Layout {seo}>
	<Header navData={nav} slot="header">
		<Fragment slot="logo">
			<Logo />
		</Fragment>
	</Header>
	<DrawerNav navData={nav} />
	<div id="page">
		<slot />
	</div>
	<Footer slot="footer">
		<Logo slot="logo" />
	</Footer>
</Layout>
