{
	"compilerOptions": {
		"experimentalDecorators": true,
		"useDefineForClassFields": false,
		"baseUrl": "src",
		"strict": true,
		"noImplicitAny": true,
		// Add type definitions for our Vite runtime.
		"types": ["astro/client"],
		"paths": {
			"@config/*": ["config/*"],
			"@icons": ["icons/*"],
			"@lib/*": ["lib/*"],
			"@utils/*": ["utils/*"],
			"@components/*": ["components/*"],
			"@layouts/*": ["layouts/*"],
			"@assets/*": ["assets/*"],
			"@pages/*": ["pages/*"],
			"@styles/*": ["styles/*"],
			"@i18n/*": ["i18n/*"],
			"@types": ["types"]
		}
	}
}
